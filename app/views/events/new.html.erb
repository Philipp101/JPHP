<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="costume-form p-4 mt-4 mb-4">
        <h2>Add a new Event</h2>

        <%= simple_form_for [@event] do |f| %>
          <%= f.input :title %>
          <%= f.input :eventtext %>
          <%= f.input :eventdate %>
          <%= f.input :links %>
          <label class="btn btn-success">
            + Upload pictures (optional)
            <span style="display:none;">
              <%= f.input :photo, as: :file %>
              <%= cl_image_upload_tag(:image_id, :html => { :multiple => true }) %>
            </span>
          </label>
          <br>
          <%= f.button :submit, "Add Event", class: "btn btn-success" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

