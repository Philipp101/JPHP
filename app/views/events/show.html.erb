<%= render 'shared/navbar' %>
<div class= "container">
  <div class="eventphotos">
    <% if @event.photos.attached? %>
      <div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
      </div>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @event.photos.each_with_index do |photo,i| %>
            <div class="carousel-item <%= "active " if i==0 %>" data-interval="1000000000">
              <%= cl_image_tag(photo.key) %>
            </div>
          <% end %>
        </div>
        </div>
      <div>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
      </div>
    <% else %>
      <div class="show-image mb-3 d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)); color: rgba(0,0,0,0.5)">
        <p><em>No image uploaded.</em></p>
      </div>
    <% end %>
  </div>
  <div class="eventtext">
    <h2><%= @event.title %></h2>
    <p><%= @event.eventtext %></p>
  </div>
</div>
